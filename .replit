modules = ["java", "java-17", "maven", "java-21"]

[nix]
channel = "stable-24_05"
packages = ["wget", "maven", "jdk17", "jdk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "seventodie-plugin-check"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build Plugin"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Paper Server"

[[workflows.workflow]]
name = "seventodie-plugin-check"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "find src -type f | sort"

[[workflows.workflow]]
name = "Build Plugin"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn package"

[[workflows.workflow]]
name = "Paper Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p server && cd server && if [ ! -f paper.jar ]; then wget -O paper.jar https://api.papermc.io/v2/projects/paper/versions/1.21.4/builds/228/downloads/paper-1.21.4-228.jar; fi && echo \"eula=true\" > eula.txt && mkdir -p plugins && cp ../target/SevenToDie-1.0.0.jar plugins/ 2>/dev/null || echo \"Plugin JAR not found, please build first\" && /nix/store/zmj3m7wrgqf340vqd4v90w8dw371vhjg-openjdk-17.0.7+7/bin/java -Xms1G -Xmx1G -jar paper.jar nogui"
waitForPort = 25565

[deployment]
run = ["sh", "-c", "mkdir -p server && cd server && if [ ! -f paper.jar ]; then wget -O paper.jar https://api.papermc.io/v2/projects/paper/versions/1.21.4/builds/398/downloads/paper-1.21.4-398.jar; fi && echo \"eula=true\" > eula.txt && mkdir -p plugins && cd .. && mvn package && cp target/SevenToDie-1.0.0.jar server/plugins/ && cd server && java -Xms1G -Xmx1G -jar paper.jar nogui"]
